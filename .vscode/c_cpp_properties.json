{
  "env": {
    "projectDefines": [
      "NAPI_EXPERIMENTAL",
      "NODE_ADDON_API_DISABLE_DEPRECATED",
      "NAPI_VERSION=6"
    ],
    "projectIncludes": [
        "${workspaceFolder}/node_modules/node-addon-api",
        "${workspaceFolder}/include",
        "${workspaceFolder}/test",
      ]
  },
  "configurations": [
    {
      "name": "Linux",
      "includePath": [
        "${projectIncludes}",
        "/usr/include/node",
      ],
      "defines": [
        "${projectDefines}"
      ],
      "compilerPath": "/usr/bin/g++",
      "cStandard": "c17",
      "cppStandard": "c++17"
    },
    {
      "name": "macOS",
      "includePath": [
        "${projectIncludes}",
        "/usr/local/include/node",
      ],
      "defines": [
        "${projectDefines}"
      ],
      "compilerPath": "/usr/bin/g++",
      "cStandard": "c17",
      "cppStandard": "c++17"
    },
    {
      "name": "Windows",
      "includePath": [
        "${projectIncludes}",
        "~/AppData/Local/node-gyp/Cache/16.10.0/include/node"
      ],
      "defines": [
        "${projectDefines}"
      ],
      "compilerPath": "cl.exe",
      "cStandard": "c17",
      "cppStandard": "c++17"
    }
  ],
  "version": 4
}
